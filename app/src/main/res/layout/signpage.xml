<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    >

    <FrameLayout
        android:layout_width="351dp"
        android:layout_height="651dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alfa_slab_one"
                android:text="LTV Social App to make new friends!"
                android:textColor="@color/dark_green_text"
                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="19dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="Find people with the same interest as you."
                android:textColor="@color/dark_green_text"
                android:textSize="18sp"/>

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:background="@drawable/ring"
               />

            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="140dp"
                android:layout_margin="20dp">

                <Button
                    android:id="@+id/logIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="14dp"
                    android:gravity="center"
                    android:text="Log In"
                    android:background="@drawable/outline_gradient_radius_button"
                    android:textColor="@color/shadow_green"
                    android:textStyle="bold"
                    app:backgroundTint="@null"/>


                <Button
                    android:id="@+id/signUp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="28dp"
                    android:text="Sign Up"
                    android:textStyle="bold"
                    android:background="@drawable/background_button"
                    app:backgroundTint="@null"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>