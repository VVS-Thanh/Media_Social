<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LogInActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_background"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="351dp"
            android:layout_height="651dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="LTV Social App to make new friends!"
                    android:textColor="@color/dark_green_text"
                    android:textSize="30sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="19dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:text="Find people with the same interest as you."
                    android:textColor="@color/dark_green_text"
                    android:textSize="18sp" />

                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="330dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="503dp"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="51dp"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"
                            android:text="Welcome to LTV Social App"
                            android:textColor="@color/dark_green_text"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="51dp"
                            android:layout_marginBottom="13dp"
                            android:background="@drawable/border"
                            android:ems="10"
                            android:gravity="left|center"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="10dp" />


                        <TextView
                            android:id="@+id/edtPassword"
                            android:layout_width="match_parent"
                            android:layout_height="51dp"
                            android:layout_marginBottom="13dp"
                            android:background="@drawable/border"
                            android:ems="10"
                            android:gravity="left|center"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp" />

                        <Button
                            android:id="@+id/logIn"
                            android:layout_width="321dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginBottom="50dp"
                            android:background="@drawable/background_button"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:text="Log in"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_marginTop="-30dp"
                            android:layout_height="wrap_content"
                            android:textColor="#5800FF"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:text="Forgot password?" />

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>